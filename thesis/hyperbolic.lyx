\begin_inset Formula 
\[
\langle L_{i}\vert\,\underline{A}=\langle L_{i}\vert\,\lambda_{i}\qquad\underline{A}\,\vert R_{i}\rangle=\lambda_{i}\,\vert R_{i}\rangle
\]

\end_inset

则称
\end_layout

